{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "../..",
    "paths": {
      "@device/*": ["TrinitySQL.Device/src/*"]
    },
    "noEmit": true
  },
  "include": [
    "**/*.ts"
  ]
}